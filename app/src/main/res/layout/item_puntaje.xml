<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblContador"
        android:layout_width="28dp"
        android:layout_height="78dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:gravity="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblContador"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Nickname"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textGanadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNombre"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Ganadas:"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/textPerdidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGanadas"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Perdidas:"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/textEmpate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPerdidas"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Empates:"
        android:textSize="17sp" />
</RelativeLayout>